<Window x:Class="Gw2TpPriceChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gw2TpPriceChecker"
        mc:Ignorable="d"
        Title="GW2 - Check Item's TP Prices" Height="250" Width="400">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Row="0" Grid.Column="0">
			<TextBlock Text="Item ID" HorizontalAlignment="Center" Margin="0,20,0,0"/>
			<TextBox x:Name="ItemIdBox" HorizontalAlignment="Center" Margin="10" Width="100"/>
		</StackPanel>

		<StackPanel Grid.Row="0" Grid.Column="1">
			<TextBlock Text="Item Name" HorizontalAlignment="Center" Margin="0,20,0,0"/>
			<TextBox x:Name="ItemNameBox" HorizontalAlignment="Center" Margin="10" Width="100" IsEnabled="False"/>
		</StackPanel>

		<StackPanel Grid.Row="0" Grid.Column="2">
			<TextBlock Text="Enable price alerts?" HorizontalAlignment="Center" Margin="0,20,0,0"/>
			
			<StackPanel Orientation="Horizontal">
				<ComboBox x:Name="ItemPriceComparisonTypeBox" Margin="5,5,0,5" Height="20" Width="20" SelectedIndex="0">
					<ComboBoxItem Content=" "/>
					<ComboBoxItem Content=">"/>
					<ComboBoxItem Content="="/>
					<ComboBoxItem Content="&lt;"/>
				</ComboBox>
				<TextBox x:Name="ItemPriceThresholdBox" Margin="5,10,0,10" Width="90" ToolTip="Enter the amount (in coins)"/>
			</StackPanel>
		</StackPanel>

		<Button x:Name="StartStopButton" Grid.Row="1" Grid.Column="1" Width="80" Height="30" Content="Start" FontWeight="DemiBold" Click="StartStopButton_Click"/>

		<TextBlock x:Name="LastCheckedBlock" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" TextWrapping="Wrap" Text="Last checked:"/>

		<TextBlock x:Name="BuyPricesBlock" Grid.Row="2" Grid.ColumnSpan="2" Text="TP Buy Price" HorizontalAlignment="Center" Visibility="Hidden"/>
		<StackPanel x:Name="BuyPricesPanel" Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Hidden">
			<Image Source="/Resources/Gold_coin.png" Width="10" Height="10" Margin="10,5,0,5"/>
			<TextBlock x:Name="BuyPriceGold" Text="0" VerticalAlignment="Center" Margin="2,5,0,5"/>

			<Image Source="/Resources/Silver_coin.png" Width="10" Height="10" Margin="10,5,0,5"/>
			<TextBlock x:Name="BuyPriceSilver" Text="0" VerticalAlignment="Center" Margin="2,5,0,5"/>

			<Image Source="/Resources/Copper_coin.png" Width="10" Height="10" Margin="10,5,0,5"/>
			<TextBlock x:Name="BuyPriceCopper" Text="0" VerticalAlignment="Center" Margin="2,5,10,5"/>
		</StackPanel>

		<StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
			<Separator x:Name="SellAndBuyPricesSeparator" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Visibility="Hidden"/>
		</StackPanel>

		<TextBlock x:Name="SellPricesBlock" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="TP Sell Price" HorizontalAlignment="Center" Visibility="Hidden"/>
		<StackPanel x:Name="SellPricesPanel" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Hidden">
			<Image Source="/Resources/Gold_coin.png" Width="10" Height="10" Margin="10,5,0,5"/>
			<TextBlock x:Name="SellPriceGold" Text="0" VerticalAlignment="Center" Margin="2,5,0,5"/>

			<Image Source="/Resources/Silver_coin.png" Width="10" Height="10" Margin="10,5,0,5"/>
			<TextBlock x:Name="SellPriceSilver" Text="0" VerticalAlignment="Center" Margin="2,5,0,5"/>

			<Image Source="/Resources/Copper_coin.png" Width="10" Height="10" Margin="10,5,0,5"/>
			<TextBlock x:Name="SellPriceCopper" Text="0" VerticalAlignment="Center" Margin="2,5,10,5"/>
		</StackPanel>
	</Grid>
</Window>
